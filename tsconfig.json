{
  "compilerOptions": {
    /* Language & Environment */
    "target": "ES5",
    "jsx": "react-jsx",

    /* Modules */
    "module": "ESNext",
    "moduleResolution": "node",

    /* JavaScript Support */
    "allowJs": false,
    "checkJs": false,
    "maxNodeModuleJsDepth": 1,

    /* Emit */
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",  // Directory for JS output (not used with emitDeclarationOnly)
    "declarationDir": "types", // Directory for declaration files

    /* Interop Constraints */
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "allowUnreachableCode": false,

    /* Completeness */
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "dist",
    "node_modules",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.stories.tsx"
  ]
}
